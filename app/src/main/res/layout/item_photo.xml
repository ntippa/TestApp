<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_item"
    tools:layout_height="300dp">

    <ImageView
        android:id="@+id/imageview_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_height="200dp"
        tools:src="@drawable/ic_launcher_background" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/gradient"
        app:layout_constraintBottom_toBottomOf="@id/imageview_item"
        app:layout_constraintEnd_toEndOf="@+id/imageview_item"
        app:layout_constraintStart_toStartOf="@+id/imageview_item" />

    <TextView
        android:id="@+id/textview_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/text_item_padding"
        android:paddingVertical="8dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@id/imageview_item"
        app:layout_constraintEnd_toEndOf="@+id/imageview_item"
        app:layout_constraintStart_toStartOf="@+id/imageview_item"
        tools:text="username" />

</androidx.constraintlayout.widget.ConstraintLayout>